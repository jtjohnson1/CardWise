{
  "name": "CardWise",
  "version": "1.0.0",
  "description": "Digital Card Collection Management Application",
  "main": "index.js",
  "scripts": {
    "start": "concurrently -n \"client,server\" \"npm run client\" \"npm run server\"",
    "client": "cd client && npm run dev",
    "server": "cd server && npm run dev",
    "build": "cd client && npm run build",
    "build-deb": "node scripts/build-deb.js",
    "install-deps": "npm install && cd client && npm install && cd ../server && npm install"
  },
  "keywords": ["cards", "collection", "management", "sports", "trading"],
  "author": "CardCat Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}