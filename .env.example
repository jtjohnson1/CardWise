# Port to listen on
PORT=3000

# MongoDB database URL - Use CardWise database
DATABASE_URL=mongodb://localhost:27017/CardWise

# JWT Secrets (generate your own in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production # INPUT_REQUIRED {Generate a secure JWT secret key for production}
REFRESH_TOKEN_SECRET=your-super-secret-refresh-key-change-in-production # INPUT_REQUIRED {Generate a secure refresh token secret key for production}

# Ollama Configuration for AI card scanning
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llava:latest

# eBay API Configuration (optional - configure in app settings)
EBAY_APP_ID=your_ebay_app_id_here # INPUT_REQUIRED {Your eBay application ID}
EBAY_DEV_ID=your_ebay_dev_id_here # INPUT_REQUIRED {Your eBay developer ID}
EBAY_CERT_ID=your_ebay_cert_id_here # INPUT_REQUIRED {Your eBay certificate ID}
EBAY_USER_TOKEN=your_ebay_user_token_here # INPUT_REQUIRED {Your eBay user token}

# TCGPlayer API Configuration (optional - configure in app settings)
TCGPLAYER_PUBLIC_KEY=your_tcgplayer_public_key_here # INPUT_REQUIRED {Your TCGPlayer public API key}
TCGPLAYER_PRIVATE_KEY=your_tcgplayer_private_key_here # INPUT_REQUIRED {Your TCGPlayer private API key}

# Security
SESSION_SECRET=your_session_secret_here # INPUT_REQUIRED {Generate a secure session secret for production}

# Development
NODE_ENV=development